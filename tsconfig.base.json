{
  "compileOnSave": false,
  "compilerOptions": {
    "noUnusedLocals": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@mk/frontend/ui": ["libs/frontend/ui/src/index.ts"],
      "@mk/frontend/bookmarks": ["libs/frontend/bookmarks/src/index.ts"],
      "@mk/frontend/main-layout": ["libs/frontend/main-layout/src/index.ts"],
      "@mk/shared": ["libs/shared/src/index.ts"],
      "@mk/client": ["libs/client/src/index.ts"],
      "@mk/frontend/clients": ["libs/frontend/clients/src/index.ts"],
      "@mk/environments": ["apps/save-read-client/src/environments/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "enableResourceInlining": true,
    "strictTemplates": true
  }
}
